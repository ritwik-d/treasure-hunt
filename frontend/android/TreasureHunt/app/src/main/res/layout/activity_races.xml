<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RacesActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/race_bn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/race_create_map"
        app:menu="@menu/bn_races" />

    <EditText
        android:id="@+id/race_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="37dp"
        android:hint="@string/raceTitle"
        app:layout_constraintBottom_toTopOf="@+id/race_diff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/race_groups"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@android:drawable/btn_dropdown"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/race_create_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/race_diff" />

    <Spinner
        android:id="@+id/race_diff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:background="@android:drawable/btn_dropdown"
        android:entries="@array/difficulties"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/race_groups"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/race_title" />

    <Button
        android:id="@+id/race_schedule"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="@string/schedule"
        app:layout_constraintBottom_toBottomOf="@+id/race_create_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <fragment
        android:id="@+id/race_create_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toTopOf="@+id/race_bn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/race_groups"
        tools:context=".ui.RacesActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>