<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/row_race_title"
        app:layout_constraintTop_toBottomOf="@+id/row_race_title">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_race_creator_pfp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/no_pfp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_race_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            android:gravity="start"
            android:text="creator name"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/row_race_line"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/row_race_title"
            app:layout_constraintStart_toEndOf="@+id/row_race_creator"
            app:layout_constraintTop_toBottomOf="@+id/row_race_title" />

        <Button
            android:id="@+id/row_race_enter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/enter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/row_race_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:gravity="start"
            android:text="race title"
            android:textAlignment="textStart"
            android:textColor="@color/colorMain"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/row_race_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/row_race_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:gravity="start"
            android:text="group name"
            android:textAlignment="textStart"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/row_race_line"
            app:layout_constraintTop_toBottomOf="@+id/row_race_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>